<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--need to get circle icon to display the priority level-->
    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginRight="24dp"
      android:padding="4dp"
      android:background="@drawable/circle_priority"
      android:tint="@android:color/white"/>

    <!--the actual timeline-->
    <FrameLayout
      android:id="@+id/item_line"
      android:layout_width="15dp"
      android:layout_height="match_parent"
      android:padding="2dp">

      <!--semi-transparent circle on timeline-->

      <View
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:background="@drawable/circle_timeline"/>

      <!--view at the right of the timeline-->
      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="32dp"
        android:paddingLeft="24dp"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="vertical">
        <TextView
          android:id="@+id/item_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:singleLine="true"
          android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

        <TextView
          android:id="@+id/item_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

        <TextView
          android:id="@+id/item_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>

      </LinearLayout>
    </FrameLayout>

  </LinearLayout>
</layout>