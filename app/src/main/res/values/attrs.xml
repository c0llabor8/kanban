<resources>

  <attr format="float" name="alphaEmphasisHigh"/>
  <attr format="float" name="alphaEmphasisMedium"/>
  <attr format="float" name="alphaEmphasisDisabled"/>

  <!--Common attributes-->
  <attr format="color" name="colorFillColor"/>
  <attr format="color" name="colorStrokeColor"/>

  <!--Label view attributes-->
  <declare-styleable name="LabelLinkView">
    <attr name="android:text"/>
    <attr format="integer" name="leadingIcon"/>
    <attr format="string" name="linkUrl"/>
  </declare-styleable>

  <!--Color attribute view attributes-->
  <declare-styleable name="ColorAttributeView">
    <attr name="android:text"/>
    <attr name="colorFillColor"/>
    <attr name="colorStrokeColor"/>
  </declare-styleable>

  <!--Color dot view attributes-->
  <declare-styleable name="ColorDotView">
    <attr name="colorFillColor"/>
    <attr name="colorStrokeColor"/>
  </declare-styleable>

  <!--Type attribute view attributes-->
  <declare-styleable name="TypeAttributeView">
    <attr name="android:text"/>
    <attr format="string" name="previewText"/>
    <attr format="reference" name="previewTextAppearance"/>
    <attr format="reference" name="previewAlpha"/>
  </declare-styleable>

  <!--Shape attribute view attributes-->
  <declare-styleable name="ShapeAttributeView">
    <attr name="android:text"/>
    <attr format="string" name="shapeSizeLetter"/>
    <attr format="color" name="shapeFillColor"/>
    <attr format="color" name="shapeStrokeColor"/>
    <attr format="reference" name="shapeAppearanceAttr"/>
  </declare-styleable>

  <!--Color and shape attribute view attributes-->
  <declare-styleable name="DonutProgress">
    <attr name="donut_progress" format="integer"/>
    <attr name="donut_max" format="integer"/>
    <attr name="donut_unfinished_color" format="color"/>
    <attr name="donut_finished_color" format="color"/>
    <attr name="donut_finished_stroke_width" format="dimension"/>
    <attr name="donut_unfinished_stroke_width" format="dimension"/>
    <attr name="donut_text_size" format="dimension"/>
    <attr name="donut_text_color" format="color"/>
    <attr name="donut_text" format="string"/>
    <attr name="donut_prefix_text" format="string"/>
    <attr name="donut_suffix_text" format="string"/>
    <attr name="donut_background_color" format="color"/>
  </declare-styleable>

</resources>
